<Window x:Class="CollegeAdmissionAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматическая регистрация в колледже" Height="450" Width="800">
   
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBox x:Name="searchTextBox" Width="200" Margin="5"/>
                <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Margin="5"/>
                <Button x:Name="CancelSearchButton" Content="Cancel Search" Click="CancelSearchButton_Click" Margin="5"/>
            </StackPanel>

        <ListBox x:Name="ApplicantsListBox" Grid.Row="1" Margin="5" ItemsSource="{Binding Zaps}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="50"/>
                        <TextBlock Text="{Binding Gpa}" Width="150"/>
                        <TextBlock Text="{Binding Spec, StringFormat=F2}" Width="50"/>
                    </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button x:Name="btnExit" Content="Exit" Click="btnExit_Click" Grid.Row="2" Margin="5" HorizontalAlignment="Right"/>
        </Grid>
    </Window>