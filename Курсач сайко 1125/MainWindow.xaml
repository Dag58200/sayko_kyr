<Window x:Class="CollegeAdmissionAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматическая регистрация в колледже" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Поиск по имени" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBox x:Name="searchTextBox" Width="200" Margin="0,0,5,0" />
            <Button x:Name="searchButton" Content="Поиск" Click="SearchButton_Click" Margin="0,0,5,0" />
           
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ListBox x:Name="applicantsListBox" ItemsSource="{Binding Applicants}" Margin="5" Grid.Column="0" SelectionMode="Single" DisplayMemberPath="Name" SelectionChanged="applicantsListBox_SelectionChanged">
            </ListBox>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <Button x:Name="btnExit" Content="Выход" Click="btnExit_Click" Width="45" Height="391" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>