<Window x:Class="CollegeAdmissionAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CollegeAdmissionAutomation" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Поиск по имени" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBox x:Name="searchTextBox" Width="200" Margin="0,0,5,0" />
            <Button x:Name="searchButton" Content="Поиск" Click="SearchButton_Click" Margin="0,0,5,0" />
            <Button x:Name="cancelSearchButton" Content="Отмена поиска" Click="CancelSearchButton_Click" Margin="0,0,5,0" Width="82" />
        </StackPanel>

        <DataGrid x:Name="applicantsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" Margin="5" SelectionChanged="applicantsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Студента" Binding="{Binding ApplicantID}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Средний балл" Binding="{Binding GPA}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>